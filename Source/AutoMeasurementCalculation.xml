<gel:script xmlns:SOAP-ENV="http://schemas.xmlsoap.org/soap/envelope/"
    xmlns:core="jelly:core"
    xmlns:file="jelly:com.niku.union.gel.FileTagLibrary"
    xmlns:gel="jelly:com.niku.union.gel.GELTagLibrary"
    xmlns:soap="jelly:com.niku.union.gel.SOAPTagLibrary"
    xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/"
    xmlns:sql="jelly:sql" xmlns:xog="http://www.niku.com/xog"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	
   	<!--============================================================-->
	<!-- Package: Strategic Alignment 5.0 							-->
	<!-- Process: Strategic Indicators Calculation 					-->
	<!-- Step	: Indicator Calculation and Rollup					-->
	<!-- Action	: Auto Measurement Calculation						-->
   	<!--============================================================-->
	<!-- Object : n/a												-->
   	<!--============================================================-->
	<!-- Calculate Indicator Level values for all Indicators 		-->
   	<!--============================================================-->
	
	<core:if test="${DebugLevel &gt; 0}">
		<gel:log level="debug" message="Start Script"/>
		<gel:log level="debug" message=">>Persisted XOG URL   : ${XOGURL}"/> 
		<gel:log level="debug" message=">>Persisted LOG Folder: ${XOGlogFolder}"/> 
		<gel:log level="debug" message=">>Persisted WEB Folder: ${XOGwebFolder}"/> 
		<gel:log level="debug" message=">>Persisted SessionID : ${sessionID}"/> 
		<gel:log level="debug" message=">>Persisted DebugLevel: ${DebugLevel}"/> 
		<gel:log level="debug" message=">>Persisted dbVendor  : ${dbVendor}"/> 
	</core:if>

    <gel:setDataSource dbId="niku"/>

	<core:set var="vChildLevel" value="2"/>
	<core:set var="vFoundChildren" value="1"/>
	<core:while test="${vFoundChildren &gt; 0}">
		<core:if test="${DebugLevel &gt; 0}">
			<gel:log level="debug" message="Searching for Level ${vChildLevel}."/> 
		</core:if>	

		<!-- Preparing XML Message -->    	
		<gel:parse var="v_xml_root">
			<NikuDataBus xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/nikuxog_customObjectInstance.xsd">
				<Header action="write" externalSource="NIKU" objectType="customObjectInstance" version="13.0.0.6982"/>
					<customObjectInstances objectCode="strat_kpi_measure"/>
			</NikuDataBus>
		</gel:parse>
		
		<core:set var="vFoundChildren" value="0"/>
		<sql:query escapeText="false" var="vIndicatorsToUpdate">
			select I.ID, I.CODE, I.NAME, I.STRAT_KPI_LEVEL, I.STRAT_MEAS_AUTOCALC, IM.CODE, TO_CHAR(IM.MEASUREMENT_DATE,'YYYY-MM-DD'), I.MEAS_FORMULA,
					sum(CM.MEASUREMENT_VALUE), max(CM.MEASUREMENT_VALUE), avg(CM.MEASUREMENT_VALUE), min(CM.MEASUREMENT_VALUE)
			from odf_Ca_strat_kpi I  
			inner join odf_ca_strat_kpi_measure IM on IM.odf_parent_id = I.ID and IM.ITEMSTATUS &lt;= 0 and IM.MEASUREMENT_DATE &lt;= sysdate
				and IM.MEASUREMENT_DATE &gt;= I.NEXT_MEASURE_DATE
			inner join ODF_MULTI_VALUED_LOOKUPS MVL1 on MVL1. attribute = 'strat_children_kpi' and MVL1.object = 'strat_kpi' and pk_id = I.ID 
			inner join ODF_CA_STRAT_KPI_MEASURE CM on CM.ODF_PARENT_ID = MVL1.VALUE AND CM.MEASUREMENT_DATE = IM.MEASUREMENT_DATE 
			where I.STRAT_KPI_LEVEL = ${vChildLevel} and I.STRAT_MEAS_AUTOCALC != 'NA'
			group by I.ID, I.CODE, I.NAME, I.STRAT_KPI_LEVEL, I.strat_meas_autocalc, I.MEAS_FORMULA, IM.CODE, IM.MEASUREMENT_DATE
		</sql:query>
		<core:forEach items="${vIndicatorsToUpdate.rowsByIndex}" var="row">
			<core:set var="vIndicator2U_Intl">${row[0]}</core:set>
			<core:set var="vIndicator2U_Code">${row[1]}</core:set>
			<core:set var="vIndicator2U_Name">${row[2]}</core:set>
			<core:set var="vIndicator2U_Levl">${row[3]}</core:set>
			<core:set var="vIndicator2U_Auto">${row[4]}</core:set>
			<core:set var="vIndicator2U_MCod">${row[5]}</core:set>
			<core:set var="vIndicator2U_MDat">${row[6]}</core:set>
			<core:set var="vIndicator2U_Form">${row[7]}</core:set>

			<core:choose>
				<core:when test="${vIndicator2U_Auto == 'CS'}">
					<core:set var="vIndicator2U_MVal">${row[8]}</core:set>
				</core:when>
				<core:when test="${vIndicator2U_Auto == 'CMA'}">
					<core:set var="vIndicator2U_MVal">${row[9]}</core:set>
				</core:when>
				<core:when test="${vIndicator2U_Auto == 'CA'}">
					<core:set var="vIndicator2U_MVal">${row[10]}</core:set>
				</core:when>
				<core:when test="${vIndicator2U_Auto == 'CM'}">
					<core:set var="vIndicator2U_MVal">${row[11]}</core:set>
				</core:when>
				<core:otherwise>
					<!-- Formula -->
					<core:set var="vIndicator2U_MVal">${vIndicator2U_Form}</core:set>
				</core:otherwise>
			</core:choose>
			
			
			<core:if test="${DebugLevel &gt; 0}">
				<gel:log level="debug" message="Indicator ${vIndicator2U_Intl}-${vIndicator2U_Code}-${vIndicator2U_Name} at Level ${vIndicator2U_Levl} will be Auto-Measured using ${vIndicator2U_Auto}: Value=${vIndicator2U_MVal}."/>
			</core:if>
			
			<core:if test="${vIndicator2U_Auto == 'FO'}">
				<core:set var="vFormula">${vIndicator2U_Form}</core:set>
				<core:set var="vError">1</core:set>
				<sql:query escapeText="false" var="vIndFormula">
					select CI.ID, CI.CODE, CI.NAME, TO_CHAR(CM.MEASUREMENT_DATE,'YYYY-MM-DD'), CM.MEASUREMENT_VALUE
					from odf_Ca_strat_kpi I  
						inner join odf_ca_strat_kpi_measure IM on IM.odf_parent_id = I.ID and IM.ITEMSTATUS &lt;= 0 and IM.MEASUREMENT_DATE &lt;= sysdate 
						inner join ODF_MULTI_VALUED_LOOKUPS MVL1 on MVL1. attribute = 'strat_children_kpi' and MVL1.object = 'strat_kpi' and pk_id = I.ID 
						inner join odf_ca_strat_kpi ci on ci.id = MVL1.VALUE
						inner join ODF_CA_STRAT_KPI_MEASURE CM on CM.ODF_PARENT_ID = CI.ID AND CM.MEASUREMENT_DATE = IM.MEASUREMENT_DATE 
					where I.ID=${vIndicator2U_Intl} and TO_CHAR(CM.MEASUREMENT_DATE,'YYYY-MM-DD') = '${vIndicator2U_MDat}'
				</sql:query>
				<core:forEach items="${vIndFormula.rowsByIndex}" var="row">
					<core:set var="vError">0</core:set>
					<core:set var="vChild_Intl">${row[0]}</core:set>
					<core:set var="vChild_Code">${row[1]}</core:set>
					<core:set var="vChild_Name">${row[2]}</core:set>
					<core:set var="vChild_Date">${row[3]}</core:set>
					<core:set var="vChild_Valu">${row[4]}</core:set>
					<core:if test="${DebugLevel &gt; 0}">
						<gel:log level="debug" message="-- Indicator ${vChild_Intl}-${vChild_Code}-${vChild_Name} Date=${vChild_Date} Value=${vChild_Valu}."/>
					</core:if>
					<core:invoke var="vFormula" on="${vFormula}" method="replaceAll">
						<core:arg type="java.lang.String" value="${vChild_Code}"/>
						<core:arg type="java.lang.String" value="${vChild_Valu}"/>
					</core:invoke>
					<core:if test="${DebugLevel &gt; 1}">
						<gel:log level="debug" message="-- Indicator Partial Formula = ${vFormula}."/>
					</core:if>
				</core:forEach>
				<core:if test="${vError==1}">
					<gel:log level="ERROR" message="-- Formula Variables not Found for Indicator ${vIndicator2U_Intl}-${vIndicator2U_Code}-${vIndicator2U_Name}."/>
				</core:if>
				<core:if test="${DebugLevel &gt; 0}">
					<gel:log level="debug" message="-- Indicator Final Formula = ${vFormula}."/>
				</core:if>
				<core:set var="vFinalResult">0</core:set>
				<core:if test="${vError==0}">
					<sql:query escapeText="false" var="vResult">
						select ${vFormula}
						from DUAL
					</sql:query>
					<core:forEach items="${vResult.rowsByIndex}" var="row">
						<core:set var="vFinalResult">${row[0]}</core:set>
					</core:forEach>
					<core:if test="${DebugLevel &gt; 0}">
						<gel:log level="debug" message="-- Final Auto-Measurement Result: ${vFinalResult}"/>
					</core:if>
				</core:if>
				<core:set var="vIndicator2U_MVal">${vFinalResult}</core:set>
			</core:if>
			<gel:parse var="vMeasurementInstance">
				<instance instanceCode="${vIndicator2U_MCod}" objectCode="strat_kpi_measure" parentInstanceCode="${vIndicator2U_Code}" parentObjectCode="strat_kpi">
					<CustomInformation>
				        <ColumnValue name="measurement_value">${vIndicator2U_MVal}</ColumnValue>
						<ColumnValue name="kpi_status">0</ColumnValue>
						<ColumnValue name="itemstatus">0</ColumnValue>
					</CustomInformation>
				</instance>
			</gel:parse>
			<!-- Adding the new Item Instance to the Root Document -->
			<gel:set insert="true" select="$v_xml_root/NikuDataBus/customObjectInstances" value="${vMeasurementInstance}"/>

			<core:set var="vFoundChildren" value="1"/>
		</core:forEach>
		
		<core:if test="${vFoundChildren == 1}">
			<core:if test="${DebugLevel &gt; 1}">
				<gel:serialize var="${v_xml_root}" fileName="${XOGwebFolder}/XOGWrite_IndicatorLevel_${vChildLevel}.xml"/>
				<gel:log level="debug" message="XOG Write can be found at: ${XOGURL}/niku/XOGWrite_IndicatorLevel_${vChildLevel}.xml"/> 
			</core:if>

			<!-- Calling XOG-->
			<core:catch var="v_xog_exception">
				<soap:invoke endpoint="${XOGURL}/niku/xog" var="runresult">
					<soap:message>
						<soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/" xmlns:xog="http://www.niku.com/xog">
							<soapenv:Header>
								<xog:Auth>
									<xog:SessionID>${sessionID}</xog:SessionID>
								</xog:Auth>	
							</soapenv:Header>
							<soapenv:Body>
								<gel:include select="$v_xml_root/NikuDataBus"/>
							</soapenv:Body>
						</soapenv:Envelope>
					</soap:message>
				</soap:invoke>
			</core:catch>
			<core:choose>
				<core:when test="${v_xog_exception != null}">
					<gel:log category="XOG" level="ERROR">XOG operation failed: ${v_xog_exception}</gel:log>
				</core:when>
				<core:otherwise>
					<gel:set select="$runresult/soapenv:Envelope/soapenv:Body/XOGOutput" var="writeOutputRoot"/>
					<gel:set asString="true" select="$writeOutputRoot/Status/@state" var="XOGoutcome"/>
					<gel:set asString="true" select="$writeOutputRoot/Statistics/@totalNumberOfRecords" var="XOGtotalrecords"/>
					<gel:set asString="true" select="$writeOutputRoot/Statistics/@insertedRecords" var="XOGinsertedrecords"/>
					<gel:set asString="true" select="$writeOutputRoot/Statistics/@updatedRecords" var="XOGupdatedrecords"/>
					<gel:set asString="true" select="$writeOutputRoot/Statistics/@failureRecords" var="XOGfailurerecords"/>
					<!-- Check the XOG result -->
					<gel:log category="XOG" level="INFO">[XOG] Document import for Level ${vChildLevel} status:${XOGoutcome} Total Objs: ${XOGtotalrecords}, Total inserted: ${XOGinsertedrecords}, Total updated: ${XOGupdatedrecords}, Total failed: ${XOGfailurerecords}</gel:log>
				</core:otherwise>
			</core:choose>

			<core:if test="${DebugLevel &gt; 1}">
				<gel:serialize var="${runresult}" fileName="${XOGwebFolder}/XOGResults_IndicatorLevel_${vChildLevel}.xml"/>
				<gel:log level="debug" message="XOG Results can be found at: ${XOGURL}/niku/XOGResults_IndicatorLevel_${vChildLevel}.xml"/> 
			</core:if>

		</core:if>
		
		<core:set var="vChildLevel" value="${vChildLevel + 1}"/>
	</core:while>

</gel:script>